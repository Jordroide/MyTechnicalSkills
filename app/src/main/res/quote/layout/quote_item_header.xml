<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quoteItemHeader"
            type="com.jordroid.showcase.quotes.presenter.model.QuoteUi.QuoteHeaderUi" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/quoteItemHeaderIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quoteItemHeaderIconTitle"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{quoteItemHeader.animeName.substring(0,2)}"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintEnd_toEndOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintStart_toStartOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintTop_toTopOf="@+id/quoteItemHeaderIcon"
            tools:text="Di" />

        <TextView
            android:id="@+id/quoteItemHeaderTitle"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="@{quoteItemHeader.animeName}"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintTop_toTopOf="@+id/quoteItemHeaderIcon"
            tools:text="Digimon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
