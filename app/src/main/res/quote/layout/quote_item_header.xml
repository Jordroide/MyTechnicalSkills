<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quoteItemHeader"
            type="com.jordroid.showcase.quotes.presenter.model.QuoteUi.QuoteHeaderUi" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quoteItemHeaderIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="@+id/quoteItemHeaderTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quoteItemHeaderTitle"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/quoteItemHeaderTitle"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@{quoteItemHeader.animeName}"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quoteItemHeaderIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Digimon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
